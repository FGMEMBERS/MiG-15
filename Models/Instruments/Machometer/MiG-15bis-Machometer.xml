	<animation>
		<type>rotate</type>
		<object-name>Mach_Needle</object-name>
		<property>instrumentation/machometer/indicated-mach</property>
		<interpolation>
			<entry><ind>0.0</ind><dep>15.0</dep></entry>
			<entry><ind>0.3</ind><dep>108.0</dep></entry>
			<entry><ind>0.5</ind><dep>180.0</dep></entry>
			<entry><ind>0.75</ind><dep>270.0</dep></entry>
			<entry><ind>1.0</ind><dep>359.0</dep></entry>
			</interpolation>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

</PropertyList> 
