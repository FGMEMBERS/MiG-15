<?xml version="1.0"?>

<PropertyList>

  <path>MiG-15bis-Machometer.ac</path> 

	<animation>
		<type>range</type>
		<min-m>0</min-m>
		<max-m>30</max-m>
	</animation>

	<animation>
		<type>material</type>
		<object-name>Mach_Needle</object-name>
		<object-name>Mach_Backplate</object-name>
  		<emission>
			<factor-prop>systems/electrical-real/volts-norm</factor-prop>
			<red>0.222</red>
			<green>0.212</green>
			<blue>0.212</blue>
		</emission>
	</animation>

