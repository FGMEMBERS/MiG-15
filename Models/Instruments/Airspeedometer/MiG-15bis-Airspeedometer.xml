	<animation>
		<type>rotate</type>
		<object-name>IAS_NeedleX1</object-name> <!-- large needle: one full turn for every 100 km/h -->
		<property>fdm/jsbsim/systems/airspeedometer/indicated-kt</property>
		<interpolation>
                	<entry><ind>0.0</ind><dep>-39.0</dep></entry> <!-- the needle in the .ac file is tilted, compensate -->
			<entry><ind>539.9568034</ind><dep>-3639.0</dep></entry>
		</interpolation>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>IAS_NeedleX10</object-name> <!-- small needle: no indication below 100 km/h -->
		<property>fdm/jsbsim/systems/airspeedometer/indicated-kt</property>
		<interpolation>
			<entry><ind>53.99568034</ind><dep>0.0</dep></entry>
			<entry><ind>539.9568034</ind><dep>-324.0</dep></entry>
		</interpolation>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

</PropertyList> 
