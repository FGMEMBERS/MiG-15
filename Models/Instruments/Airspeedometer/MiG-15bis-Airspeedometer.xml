<?xml version="1.0"?>

<PropertyList>

  <path>MiG-15bis-Airspeedometer.ac</path> 

      <effect>
            <inherits-from>Effects/model-transparent</inherits-from>
            <object-name>IAS_Glass</object-name>
      </effect>

	<animation>
		<type>range</type>
		<min-m>0</min-m>
		<max-m>30</max-m>
	</animation>

	<animation>
		<type>material</type>
		<object-name>IAS_NeedleX1</object-name>
		<object-name>IAS_NeedleX10</object-name>
		<object-name>IAS_Backplate</object-name>
  		<emission>
			<factor-prop>systems/electrical-real/volts-norm</factor-prop>
			<red>0.222</red>
			<green>0.212</green>
			<blue>0.212</blue>
		</emission>
	</animation>

