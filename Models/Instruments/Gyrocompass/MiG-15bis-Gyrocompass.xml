			</equals>
		</condition>
	</animation>

-->

  <animation>
    <type>rotate</type>
    <object-name>GC_MDisk</object-name>
    <object-name>GC_Needle</object-name>
    <property>instrumentation/gyrocompass/indicated-heading-deg</property>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>  
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>GC_CDisk</object-name>
    <property>instrumentation/gyrocompass/offset</property>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>  
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>GC_Vern</object-name>
    <property>instrumentation/gyrocompass/offset</property>
    <factor>10</factor>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>-0.053</z-m>
    </center>  
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>


	<animation>
		<type>pick</type>
		<object-name>GC_Vern</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<interval-sec>0.1</interval-sec>
			<binding>
				<command>nasal</command>
				<script>MIG15BIS.switchswap("/instrumentation/gyrocompass")</script>
			</binding>
		</action>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<interval-sec>0.1</interval-sec>
			<binding>
				<command>nasal</command>
				<script>MIG15BIS.switchswap("/instrumentation/gyrocompass")</script>
			</binding>
		</action>
	</animation>

  <animation>
  <type>pick</type>
  <object-name>GC_Down</object-name>
  <action>
    <button>0</button>
    <repeatable>true</repeatable>
    <interval-sec>0.1</interval-sec>
     <binding>
       <command>property-adjust</command>
       <property>instrumentation/gyrocompass/offset</property>
       <step>-1</step>
	     <min>0</min>
    	 <max>360</max>
			 <wrap>true</wrap>
     </binding>
  </action>
  <action>
    <button>1</button>
    <repeatable>true</repeatable>
    <interval-sec>0.1</interval-sec>
     <binding>
       <command>property-adjust</command>
       <command>property-adjust</command>
       <property>instrumentation/gyrocompass/offset</property>
       <step>-5</step>
	     <min>0</min>
    	 <max>360</max>
			 <wrap>true</wrap>
     </binding>
  </action>
</animation>

  <animation>
  <type>pick</type>
  <object-name>GC_Up</object-name>
  <action>
    <button>0</button>
    <repeatable>true</repeatable>
    <interval-sec>0.1</interval-sec>
     <binding>
       <command>property-adjust</command>
       <property>instrumentation/gyrocompass/offset</property>
       <step>1</step>
	     <min>0</min>
    	 <max>360</max>
			 <wrap>true</wrap>
     </binding>
  </action>
  <action>
    <button>1</button>
    <repeatable>true</repeatable>
    <interval-sec>0.1</interval-sec>
     <binding>
       <command>property-adjust</command>
       <property>instrumentation/gyrocompass/offset</property>
       <step>5</step>
	     <min>0</min>
    	 <max>360</max>
			 <wrap>true</wrap>
     </binding>
  </action>
</animation>

</PropertyList> 
