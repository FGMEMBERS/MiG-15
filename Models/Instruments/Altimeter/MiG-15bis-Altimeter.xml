	</animation>

-->

  <animation>
    <type>rotate</type>
    <object-name>Alt_NX10</object-name>
    <property>/fdm/jsbsim/position/h-sl-ft</property>
    <factor>0.11</factor>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>  
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Alt_NX100</object-name>
    <property>/fdm/jsbsim/position/h-sl-ft</property>
    <factor>0.011</factor>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>  
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>


  <animation>
    <type>rotate</type>
    <object-name>Alt_Corplate</object-name>
    <property>/instrumentation/altimeter/setting-inhg</property>
    <interpolation>
      <entry><ind>27.55</ind><dep>-180</dep></entry>
      <entry><ind>32.28</ind><dep>180</dep></entry>
      <entry><ind>29.921</ind><dep>0</dep></entry>
    </interpolation>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>  
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
  <type>pick</type>
  <object-name>Alt_Down</object-name>
  <action>
    <button>0</button>
    <repeatable>true</repeatable>
    <interval-sec>0.1</interval-sec>
     <binding>
       <command>property-adjust</command>
       <property>/instrumentation/altimeter/setting-inhg</property>
       <step>-0.1</step>
       <min>27.6</min>
       <max>32.2</max>
       <wrap>false</wrap>
     </binding>
  </action>
  <action>
    <button>1</button>
    <repeatable>true</repeatable>
    <interval-sec>0.1</interval-sec>
     <binding>
       <command>property-adjust</command>
       <property>/instrumentation/altimeter/setting-inhg</property>
       <step>-1</step>
       <min>27.6</min>
       <max>32.2</max>
       <wrap>false</wrap>
     </binding>
  </action>
  <action>
    <button>3</button>
    <repeatable>true</repeatable>
    <interval-sec>0.1</interval-sec>
     <binding>
       <command>property-adjust</command>
       <property>/instrumentation/altimeter/setting-inhg</property>
       <step>-0.2</step>
       <min>27.6</min>
       <max>32.2</max>
       <wrap>false</wrap>
     </binding>
  </action>
  <action>
    <button>4</button>
    <repeatable>true</repeatable>
    <interval-sec>0.1</interval-sec>
     <binding>
       <command>property-adjust</command>
       <property>/instrumentation/altimeter/setting-inhg</property>
       <step>-0.5</step>
       <min>27.6</min>
       <max>32.2</max>
       <wrap>false</wrap>
     </binding>
  </action>
</animation>

  <animation>
  <type>pick</type>
  <object-name>Alt_Up</object-name>
  <action>
    <button>0</button>
    <repeatable>true</repeatable>
    <interval-sec>0.1</interval-sec>
     <binding>
       <command>property-adjust</command>
       <property>/instrumentation/altimeter/setting-inhg</property>
       <step>0.1</step>
       <min>27.6</min>
       <max>32.2</max>
       <wrap>false</wrap>
     </binding>
  </action>
  <action>
    <button>1</button>
    <repeatable>true</repeatable>
    <interval-sec>0.1</interval-sec>
     <binding>
       <command>property-adjust</command>
       <property>/instrumentation/altimeter/setting-inhg</property>
       <step>1</step>
       <min>27.6</min>
       <max>32.2</max>
       <wrap>false</wrap>
     </binding>
  </action>
  <action>
    <button>3</button>
    <repeatable>true</repeatable>
    <interval-sec>0.1</interval-sec>
     <binding>
       <command>property-adjust</command>
       <property>/instrumentation/altimeter/setting-inhg</property>
       <step>0.2</step>
       <min>27.6</min>
       <max>32.2</max>
       <wrap>false</wrap>
     </binding>
  </action>
  <action>
    <button>4</button>
    <repeatable>true</repeatable>
    <interval-sec>0.1</interval-sec>
     <binding>
       <command>property-adjust</command>
       <property>/instrumentation/altimeter/setting-inhg</property>
       <step>0.5</step>
       <min>27.6</min>
       <max>32.2</max>
       <wrap>false</wrap>
     </binding>
  </action>
</animation>


</PropertyList> 
