<!-- De-select pilot when in view 0 -->
  <animation>
    <type>select</type>
    <object-name>PLT_Pilot_Head</object-name>
    <object-name>PLT_Helmet</object-name>
    <object-name>PLT_Visor</object-name>
    <object-name>PLT_Facemask</object-name>
    <condition>
      <not>
        <equals>
          <property>sim/current-view/view-number</property>
          <value>0</value>
        </equals>
      </not>
    </condition>
  </animation>

